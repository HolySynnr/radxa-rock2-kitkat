<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:padding="10dip">
    
    <com.rockchip.tvbox.picker.NumberPicker
        android:id="@+id/pref_num_picker"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
    
    <com.rockchip.tvbox.picker.NumberPicker
        android:id="@+id/pref_num_picker1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
        
    <com.rockchip.tvbox.picker.NumberPicker
        android:id="@+id/pref_num_picker2"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
        
    <TextView
		android:id="@+id/sub_num_txt"
		android:text="@+string/teletext_picker_interver"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textColor="@color/white"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:gravity="center"/>
    
    <com.rockchip.tvbox.picker.NumberPicker
        android:id="@+id/pref_num_picker3"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
        
    <com.rockchip.tvbox.picker.NumberPicker
        android:id="@+id/pref_num_picker4"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent" />
</LinearLayout>
